<?xml version='1.0' encoding='utf-8'?> <!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernate_1</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        <mapping class="org.example.entity.Student"/>
        <mapping class="org.example.entity.Car"/>
        <mapping class="org.example.entity.Phone"/>
        <mapping class="org.example.entity.Animal"/>
        <mapping class="org.example.entity.University"/>
        <mapping class="org.example.entity.Actor"/>
        <mapping class="org.example.entity.City"/>
        <mapping class="org.example.entity.Girl"/>
        <mapping class="org.example.entity.Boy"/>
        <mapping class="org.example.entity.House"/>

    </session-factory>
</hibernate-configuration>